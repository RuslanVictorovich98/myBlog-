<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-8">
    <section class="user_info">
    	<%= gravatar_for @user %>
      <h1>
      	<%= @user.name %><br>
      	<%= @user.email %>
        <p>(ID: <%= @user.id %>)</p>
       </h1>
       <p><%= link_to "(change)", edit_user_path(current_user) %></p>
    </section>
  </aside>
</div>